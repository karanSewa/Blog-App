<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Post</title>
    <link rel="stylesheet" href="styles/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("header.ejs") %>

    <div class="container blog-container">
      <p class="text-center text-danger fs-1">Your all posts</p>

      <div class="row">
        <div class="col">
          <ul>
            <% if(locals.posts) {%> <% posts.forEach((post, index) =>{ %>

            <li class="fs-4 blog-items">
              <p><%= new Date().toLocaleDateString();%></p>
              <h1 class="fs-1"><%= post.title %></h1>
              <br />
              <%= post.content %> <br />
              <form
                id="deleteFormbtn"
                action="/delete/<%= index %>"
                method="post"
              >
                <input
                  type="submit"
                  class="btn btn-lg btn-danger"
                  value="delete"
                  id="deleteBtn"
                />
              </form>
              <form id="editFormbtn" action="/edit/<%= index  %>" method="get">
                <input
                  type="submit"
                  class="btn btn-lg btn-success"
                  value="edit"
                  id="editBtn"
                />
              </form>
              <form id="viewFormbtn" action="/view/<%= index  %>" method="get">
                <input
                  type="submit"
                  class="btn btn-lg btn-outline-dark"
                  value="view"
                  id="viewBtn"
                />
              </form>
            </li>
            <% }); %> <% } %>
          </ul>
        </div>
      </div>
    </div>
    <%-include("footer.ejs") %>

    <script src="app.js"></script>
  </body>
</html>
